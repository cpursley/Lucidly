.span12
  %h3
    %span
      = @dreams.count
      dreams
.span8
  .posts
    - @dreams.each do |dream|
      .matter
        %h2= link_to dream.title, dream
        .meta
          %i.icon-calendar
          = dream.created_at.strftime("%B %d, %Y")
          \-
          %i.icon-comment
          = dream.comments.count
          \-
          %i.icon-heart
          = dream.reputation_for(:votes).to_i
          \-
          %i.icon-tags
          = raw dream.tag_list.map { |t| link_to t, tag_path(t) }.join(', ')
        %p= dream.teaser
    = will_paginate @dreams
.span4
  .sidebar
    = render 'sidebar'